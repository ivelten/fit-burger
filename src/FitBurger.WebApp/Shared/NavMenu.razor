<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FitBurger.WebApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="Cliente">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="order/create">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Fazer pedido
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="booking/create">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Reservar mesa
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador,Atendente">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="customer/list">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Clientes
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="attendant/list">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Atendentes
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="deliveryman/list">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Motoboys
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador,Atendente,Motoboy">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="order/list">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Pedidos
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador,Atendente">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="booking/list">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Reservas
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="product/list">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Produtos
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

}