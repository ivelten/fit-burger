@page "/customer/create"
@using FitBurger.Core.Domain.Enums
@inherits CreateBase

<PageTitle>Cadastrar cliente</PageTitle>

<h1>Cadastrar cliente</h1>

<EditForm Model="@Model" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="form-group pb-3">
        <label for="name">Nome:</label>
        <InputText id="name" class="form-control" @bind-Value="Model.Name"/>
    </div>

    <div class="form-group pb-3">
        <label for="address">Endereço:</label>
        <InputText id="address" class="form-control" @bind-Value="Model.Address"/>
    </div>

    <div class="form-group pb-3">
        <label for="cpf">CPF:</label>
        <InputText id="cpf" class="form-control" @bind-Value="Model.Cpf"/>
    </div>

    <div class="form-group pb-3">
        <label for="phone">Telefone:</label>
        <InputText id="phone" class="form-control" @bind-Value="Model.PhoneNumber"/>
    </div>

    <div class="form-group pb-3">
        <label for="email">Email:</label>
        <InputText id="email" class="form-control" @bind-Value="Model.Email"/>
    </div>
    
    <div class="form-group pb-3">
        <label for="gender">Sexo:</label>
        <InputRadioGroup id="gender" class="form-control" @bind-Value="Model.Gender">
            @foreach (var gender in Enum.GetValues<Gender>())
            {
                <InputRadio id="@("gender" + gender)" Value="@gender"/>
                <label for="@("gender" + gender)" class="pe-2">@((char)gender)</label>
            }
        </InputRadioGroup>
    </div>
    
    <div class="form-group pb-3">
        <label for="birthday">Data de aniversário:</label>
        <InputDate id="birthday" class="form-control" @bind-Value="Model.Birthday"/>
    </div>
    
    <div class="form-group pb-3">
        <label for="username">Login:</label>
        <InputText id="username" class="form-control" @bind-Value="Model.UserName"/>
    </div>

    <div class="form-group pb-3">
        <label for="password">Email:</label>
        <InputText id="password" class="form-control" @bind-Value="Model.Password"/>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary pr-3">Salvar</button>
        <a href="/customer/list" class="btn btn-secondary" role="button">
            Voltar
        </a>
    </div>
</EditForm>